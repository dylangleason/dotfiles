typeset -U path manpath

path=(
    ~/.local/bin
    /opt/bin
    /usr/local/bin
    /usr/local/sbin
    /usr/bin
    /usr/sbin
    /bin
    /sbin
    $path
)

manpath=(
    /usr/local/share/man
    /usr/share/man
    $manpath
)

export -TU INFOPATH infopath
infopath=(
    /usr/local/share/info
    /usr/share/info
    $infopath
)

export EDITOR="emacsclient -a '' -t"
export LANG=en_US.UTF-8
export TERM=xterm-256color
export ZSH=~/.oh-my-zsh

if [[ -f ~/.env ]]; then
    . ~/.env
fi

if [ -e /home/dgleason/.nix-profile/etc/profile.d/nix.sh ]; then . /home/dgleason/.nix-profile/etc/profile.d/nix.sh; fi # added by Nix installer

