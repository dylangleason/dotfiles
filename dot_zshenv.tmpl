typeset -U path manpath

path=(
    ~/.local/bin
    /opt/bin
    /usr/local/bin
    /usr/local/sbin
    /usr/bin
    /usr/sbin
    /bin
    /sbin
    $path
)

manpath=(
    /usr/local/share/man
    /usr/share/man
    $manpath
)

export -TU INFOPATH infopath
infopath=(
    /usr/local/share/info
    /usr/share/info
    $infopath
)

{{ if eq .chezmoi.os "linux" -}}
export -TU XDG_DATA_DIRS xdg_data_dirs
xdg_data_dirs=(
    ~/.local/share
    ~/.nix-profile/share
    /usr/local/share
    /usr/share
)

{{ end -}}
export EDITOR="emacsclient -a '' -t"
export LANG=en_US.UTF-8
export TERM=xterm-256color
export WORKON_HOME=~/.local/share/virtualenvs
export ZSH=~/.nix-profile/share/oh-my-zsh

if [[ -f ~/.env ]]; then
    . ~/.env
fi

if [ -e /home/dgleason/.nix-profile/etc/profile.d/nix.sh ]; then
    . /home/dgleason/.nix-profile/etc/profile.d/nix.sh;
fi

{{ if eq .chezmoi.os "darwin" -}}
# macOS workaround for `path_helper` in /etc/zprofile
export GOODPATH=$PATH
{{ end -}}
